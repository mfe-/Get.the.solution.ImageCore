<Page
    x:Class="Get.the.solution.Image.Manipulation.Shell.ResizePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Get.the.solution.Image.Manipulation.Shell"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    xmlns:common="using:Get.the.solution.UWP.XAML"
    xmlns:converter="using:Get.the.solution.UWP.XAML.Converter"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" 
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d">
    <Page.Resources>
        <converter:StringToIntConverter x:Key="StringToIntConverter" />
        <converter:FilenamePathShorterConverter x:Key="FilenamePathShorterConverter" />
    </Page.Resources>
    <Page.Content>
        <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Orientation="Vertical">
            <TextBlock Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/Resize" TextWrapping="Wrap" />
            <Button x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/SelectImage" 
                Command="{Binding Path=OpenFilePickerCommand}">
                <Interactivity:Interaction.Behaviors>
                    <Core:DataTriggerBehavior Binding="{Binding Path=ShowOpenFilePicker,UpdateSourceTrigger=PropertyChanged}" Value="True">
                        <Core:ChangePropertyAction PropertyName="Visibility" Value="Visible" />
                    </Core:DataTriggerBehavior>
                    <Core:DataTriggerBehavior Binding="{Binding Path=ShowOpenFilePicker,UpdateSourceTrigger=PropertyChanged}" Value="False">
                        <Core:ChangePropertyAction PropertyName="Visibility" Value="Collapsed" />
                    </Core:DataTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </Button>
            <ListView ItemsSource="{Binding Path=ImageFiles,UpdateSourceTrigger=PropertyChanged}" MaxHeight="40"
                      Name="listboxfiles" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Single">
                <Interactivity:Interaction.Behaviors>
                    <Core:DataTriggerBehavior Binding="{Binding Path=ShowOpenFilePicker,UpdateSourceTrigger=PropertyChanged}" Value="False">
                        <Core:ChangePropertyAction PropertyName="Visibility" Value="Visible" />
                    </Core:DataTriggerBehavior>
                    <Core:DataTriggerBehavior Binding="{Binding Path=ShowOpenFilePicker,UpdateSourceTrigger=PropertyChanged}" Value="True">
                        <Core:ChangePropertyAction PropertyName="Visibility" Value="Collapsed" />
                    </Core:DataTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--common:OnDel.Command="{Binding Path=DataContext.DeleteFileCommand,ElementName=listboxfiles,RelativeSource={RelativeSource Mode=Self}}"
                                               common:OnDel.CommandParameter="{Binding Path=SelectedItem,ElementName=listboxfiles,RelativeSource={RelativeSource Mode=Self}}"-->

                        <TextBlock x:Name="PathTextBlock"
                                               ToolTipService.ToolTip="{Binding Path=Path}"
                                               Text="{Binding Path=Path,Converter={StaticResource FilenamePathShorterConverter}}" >
                        </TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/SelectSize" />

            <RadioButton GroupName="A" IsChecked="{Binding Path=SizeSmallChecked,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                     x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/SizeSmall" />
            <RadioButton GroupName="A" IsChecked="{Binding Path=SizeMediumChecked,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                     x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/SizeMedium" />
            <RadioButton GroupName="A" IsChecked="{Binding Path=SizeCustomChecked,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                <RadioButton.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/SizeCustomWidth" />
                        <TextBox Text="{Binding Width,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                 MaxLength="5" Width="70" />
                        <TextBlock  x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/SizeCustomBy" />
                        <TextBox Text="{Binding Height,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                 MaxLength="5" Width="70" />
                        <TextBlock  x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/SizeCustomHeight" />
                    </StackPanel>
                </RadioButton.Content>
            </RadioButton>
            <CheckBox x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/CopyEnabled" 
                    IsChecked="{Binding Path=OverwriteFiles,Mode=TwoWay}" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/Ok" 
                    Command="{Binding Path=OkCommand}"/>
                <Button x:Uid="/Get.the.solution.Image.Manipulation.Resources/Resource/Cancel"
                    Command="{Binding Path=CancelCommand}"/>
            </StackPanel>
        </StackPanel>
    </Page.Content>
</Page>
